{
  "name": "ai-pr-reviewer-action",
  "version": "1.0.0",
  "description": "AI-powered PR reviewer for accessibility, performance, and security",
  "main": "dist/index.js",
  "scripts": {
    "build": "ncc build src/index.ts -o dist --source-map --license licenses.txt",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write 'src/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts'",
    "test": "echo \"No tests specified yet\" && exit 0",
    "dev": "yarn build && node dist/index.js"
  },
  "keywords": [
    "github-action",
    "ai",
    "pr-review",
    "accessibility",
    "performance",
    "security"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@vercel/ncc": "^0.38.1",
    "prettier": "^3.1.0",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
